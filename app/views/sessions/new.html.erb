<% provide(:title, "Log in") %>
<h2>Log in</h2>

<%= simple_form_for(:session, url: login_path) do |f| %>

  <div class="row">
    <div class="large-6 columns large-centered">
      <%= f.input :email, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns large-centered">
      <%= f.input :password, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns large-centered">
      <%= f.input :remember_me, as: :boolean, label: "Remember me on this computer" %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns large-centered">
      <%= f.submit "Log in", class: "button" %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns large-centered">
      <%= link_to "Forgot password?", new_password_reset_path %>
    </div>
  </div>
<% end %>
